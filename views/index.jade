doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    script(src='/javascripts/jquery.min.js')
    script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js')
    script(src='http://maps.google.com/maps/api/js?sensor=true')
    script(src='/javascripts/global.js')
    div(ng-app="myApp",ng-controller="myCtrl")
        h1= title
        #loading
           p(ng-show="loadvis") Loading...
        p(style="color:red") {{warning}}
        br
        //,ng-change="alert(showdebug)")
        p
            span enable-debug:
            input(type="checkbox",ng-model="showdebug")
        p List of Couriers:
        select#title.form-control(ng-model='newClient',ng-options="courier.name for courier in myWelcome",ng-change="getemptymap(newClient.lastLocation, newClient.name)")
        
        button(ng-click='getemptymap(newClient.lastLocation, newClient.name)') Refresh
        p
            div(ng-show="showdebug") selected: {{newClient}}
        p
            div(ng-show="showdebug") Data received: {{debug}}
        button(ng-click='showRoute()') Fetch all
        button(ng-click='locateMe()') Locate me
    #map
    hr
    h1 Add New Entry
    h3 please note that new courier information is automatically inserted when you add a new route here! (upsert)
    form(name="add-estimation", method="post", action="/")
        div.input
            span.label Courier Name:
            input(type="text", name="user[name]")
        p
          div.input
              span.label Lat: 
              input(type="text", name="user[lat]")
          div.input
              span.label Lng:
              input(type="text", name="user[lng]")
        div.actions
            input(type="submit", value="send")
 
